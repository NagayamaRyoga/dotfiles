#!/usr/bin/env zsh
query="${1:-.}"

file="$(\command mktemp)"
\command cat >"$file"
result="$(\command fzf --print-query --query="$query" --preview="\command jq {q} ${(q)file} | \command bat --color=always --plain --language=json" --preview-window='down,99%')"
\command jq "$result" "$file"
\command rm "$file"
