#!/usr/bin/env zsh
if [ "$#" -ne 1 ]; then
    echo "$0 <file>"
    return 1
elif [ ! -e "$1" ]; then
    echo "$1 does not exist"
    return 1
elif [ -d "$1" ]; then
    fzf-preview-directory "$1"
elif [[ "$(file --mime -- "$1")" =~ "binary" ]]; then
    hexyl --length=8KiB -- "$1"
elif (( ${+commands[bat]} )); then
    bat --line-range=":200" --color=always -- "$1"
else
    head -n200 -- "$1"
fi
